@import './menu.styl'
.header
    background: white
    position: sticky
    top 0
    left 0
    right 0
    padding: 1.5em 0
    transition: .3s background
    &-content
        display: flex
        justify-content: space-between
        align-items: center
    &-logo
        display: inline-flex
        width: 150px
        height: 40px
        background: url(../images/logo-bookmark.svg) no-repeat
        background-size: contain
